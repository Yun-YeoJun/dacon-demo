
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
source ~/.bashrc   # zsh면 source ~/.zshrc

nvm install --lts
node -v
npm -v

npm install
nohup npx vite --host 0.0.0.0 > app.log 2>&1 &


docker build -t dacon-frontend .

# 실행 (백그라운드, 자동 재시작)
docker run -d --restart unless-stopped -p 5173:5173 --name dacon-frontend dacon-frontend
