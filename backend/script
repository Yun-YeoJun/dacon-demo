# 이미지 빌드
docker build -t smishing-backend .

# 컨테이너 실행
docker run -d \
  --name smishing-api \
  --restart unless-stopped \
  -p 8000:8000 \
  -v $(pwd)/data:/app/data \
  -e MODEL_URL="http://모델서버주소" \
  smishing-backend

sudo docker run -d \
  --name smishing-api \
  --restart unless-stopped \
  -p 8000:8000 \
  -v $(pwd)/data:/app/data \
  smishing-backend
